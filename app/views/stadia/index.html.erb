<div class="grid grid-cols-2 gap-10 mb-2">
    <div class="text-start text-3xl font-bold leading-none"><%= t('.title') %></div>
    <div class="text-end my-auto">
        <%= link_to t('button.add.stadium'), new_stadium_path, method: :post, class: "bg-blue hover:bg-gray-100 text-gray-800 p-2 border border-gray-400 rounded shadow" %>
    </div>
</div>

<% if @stadia.present? %>
    <div class="py-4 relative overflow-x-auto">
        <table class="w-full text-sm text-left shadow-md rounded">
            <tbody>
                <tr class="bg-gray-200 border">
                    <th class="p-3"><%= t('.name') %></th>
                    <th class="p-3"><%= t('.location_name') %></th>
                    <th class="p-3"><%= t('.location_full') %></th>
                    <th class="p-3"></th>
                </tr>
                <% @stadia.each do |stadium| %>
                    <%= render stadium %>
                <% end %>
            </tbody>
        </table>
    </div>
<% else %>
    <p class="font-semibold text-red-700 text-center"><%= t('.stadia_empty') %></p>
<% end %>

<%= render 'shared/pagy' %>