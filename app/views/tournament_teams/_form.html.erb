<%= form_with(model: tournament_team) do |form| %>
    <form class="w-full max-w-lg">
        <%= render 'shared/form_errors_messages', object: form.object %>

        <div>
            <%= form.hidden_field :tournament_id %>
        </div>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full px-3">
                <%= form.label :team_id, t('.team_id'), class: "block text-xl tracking-wide text-gray-700 font-bold mb-2" %>
                <%= select(:tournament_team, :team_id, options_for_select(@teams, selected: form.object.team_id), prompt: t('.prompt')) %>
            </div>
        </div>

        <div class="flex items-center justify-between">
            <%= form.button nil, class: "bg-green hover:bg-gray-100 text-gray-800 p-2 border border-gray-400 rounded shadow" do %>
                <%= t('button.submit') %>
            <% end %>
        </div>
    </form>
<% end %>