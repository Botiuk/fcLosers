<%= form_with(model: tournament_team) do |form| %>
    <form class="w-full max-w-lg">
        <%= render 'shared/form_errors_messages', object: form.object %>

        <div>
            <%= form.hidden_field :tournament_id %>
        </div>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full px-3">
                <%= form.label :team_id, t('.team_id'), class: "block text-xl tracking-wide text-gray-700 font-bold mb-2" %>
                <%= select(:tournament_team, :team_id, options_for_select(@teams, selected: form.object.team_id), {prompt: t('.prompt')}, {class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"}) %>
            </div>
        </div>

        <div class="flex items-center justify-between py-2">
            <%= form.button nil, class: "bg-emerald-500 hover:bg-emerald-600 text-white p-2 rounded shadow" do %>
                <%= t('button.submit') %>
            <% end %>
        </div>
    </form>
<% end %>