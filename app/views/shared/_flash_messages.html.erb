<% if flash[:notice] %>
    <div class="text-white text-center px-6 py-4 border-0 rounded relative mb-4 bg-emerald-500">
        <%= notice %>
    </div>
<% end %>

<% if flash[:alert] %>
    <div class="text-white text-center px-6 py-4 border-0 rounded relative mb-4 bg-red-500">
        <%= alert %>
    </div>
<% end %>
