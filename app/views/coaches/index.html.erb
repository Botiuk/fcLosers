<div class="grid grid-cols-2 gap-10 mb-2">
    <div class="text-start text-3xl font-bold leading-none"><%= t('.title') %></div>
    <% if press_service_signed_in? %>
        <div class="text-end my-auto">
            <%= link_to t('button.add.coach'), new_coach_path, :method => :post, class: "bg-blue hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 border border-gray-400 rounded shadow" %>
        </div>
    <% end %>
</div>

<% if press_service_signed_in? && @coaches.present? %>
    <div class="px-3 py-4 flex justify-center">
        <table class="w-full text-md bg-white shadow-md rounded mb-4">
            <tbody>
                <tr class="border">
                    <th class="text-left p-3 px-5"><%= t('.surname') %></th>
                    <th class="text-left p-3 px-5"><%= t('.name') %></th>
                    <th class="text-left p-3 px-5"><%= t('.middle_name') %></th>
                    <th class="text-left p-3 px-5"><%= t('.position') %></th>
                    <th class="text-left p-3 px-5"><%= t('.which_team') %></th>                    
                    <th colspan="3"></th>
                </tr>
                <% @coaches.each do |coach| %>
                    <tr class="border">
                        <td class="p-3 px-5"><%= coach.surname %></td>
                        <td class="p-3 px-5"><%= coach.name %></td>
                        <td class="p-3 px-5 text-center"><%= coach.middle_name %></td>
                        <td class="p-3 px-5 text-center"><%= Coach.human_enum_name(:position, coach.position) %></td>
                        <td class="p-3 px-5 text-center"><%= Coach.human_enum_name(:which_team, coach.which_team) %></td>
                        
                        <td class="p-3 px-5"><%= link_to t('button.show'), coach, class: "bg-blue hover:bg-gray-100 text-gray-800 text-sm font-semibold py-2 px-4 border border-gray-400 rounded shadow" %></td>
                        <td class="p-3 px-5"><%= link_to t('button.edit'), edit_coach_path(coach), class: "bg-blue hover:bg-gray-100 text-gray-800 text-sm font-semibold py-2 px-4 border border-gray-400 rounded shadow" %></td>
                        <td class="p-3 px-5"><%= button_to t('button.delete'), coach, method: :delete, data: { turbo_confirm: t('button.delete_confirm') }, class: "bg-blue hover:bg-gray-100 text-gray-800 text-sm font-semibold py-2 px-4 border border-gray-400 rounded shadow" %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% elsif @coaches.present? %>    
    <div class="grid grid-cols-3">
        <% @coaches.each do |coach| %>
            <%= render coach %>
        <% end %>
    </div>
<% else %>
    <p class="font-semibold text-red-700 text-center"><%= t('.coaches_empty') %></p>
<% end %>

<% if @pagy.present? %>
    <%= render 'shared/pagy' %>
<% end %>