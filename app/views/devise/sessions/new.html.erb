<div class="text-start text-xl font-bold leading-none pb-2"><%= t('.title') %></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/3 px-3">
      <%= f.label :email, t('.email'), class: "block text-lg tracking-wide text-gray-700 font-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/3 px-3">
      <%= f.label :password, t('.password'), class: "block text-lg tracking-wide text-gray-700 font-bold" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex flex-wrap -mx-3">
      <div class="w-full md:w-1/3 px-3">
        <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
        <%= f.label :remember_me, t('.remember_me'), class: "ms-2 text-lg text-gray-900 dark:text-gray-300" %>
      </div>
    </div>
  <% end %>

  <div class="flex items-center justify-between py-2">
    <%= f.submit t('.login'), class: "bg-emerald-500 hover:bg-emerald-600 text-white p-2 rounded shadow" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
